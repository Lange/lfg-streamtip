{
  "name": "lfg-streamtip",
  "version": "0.1.0",
  "homepage": "http://supportclass.net/",
  "author": "Alex Van Camp <email@alexvan.camp>",
  "description": "StreamTip integration",
  "license": "MIT",
  "dependencies": {
    "streamtip-listener": "^1.3.3"
  },
  "scripts": {
    "test": "npm run static",
    "static": "eslint dashboard/**/*.js dashboard/**/*.html extension.js"
  },
  "nodecg": {
    "compatibleRange": "~0.7.0",
    "dashboardPanels": [
      {
        "name": "tip-stats",
        "title": "Tip Stats",
        "width": 2,
        "headerColor": "#564573",
        "file": "panel.html"
      },
      {
        "name": "reset-daily",
        "title": "Reset Daily",
        "width": 3,
        "file": "reset-daily.html",
        "dialog": true,
        "dialogButtons": [
          {
            "name": "Yes, reset",
            "type": "confirm"
          },
          {
            "name": "No, do not reset",
            "type": "dismiss"
          }
        ]
      },
      {
        "name": "reset-monthly",
        "title": "Reset Monthly",
        "width": 3,
        "file": "reset-monthly.html",
        "dialog": true,
        "dialogButtons": [
          {
            "name": "Yes, reset",
            "type": "confirm"
          },
          {
            "name": "No, do not reset",
            "type": "dismiss"
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "eslint": "^2.6.0",
    "eslint-config-xo": "^0.12.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-html": "^1.4.0"
  }
}
